        "ELASTIC_SEARCH_ID_CACHE_MEMORY_SIZE",
        "ELASTIC_SEARCH_COMPLETION_SIZE",
	"ELASTIC_SEARCH_NO_OF_NODES",
	"ELASTIC_SEARCH_NO_OF_DATA_NODES",
	"ELASTIC_SEARCH_ACTIVE_PRIMARY_SHARDS",
